[core]
    quotepath = false
    editor = vim
    excludesfile = /Users/david/.dotfiles/.gitignore
[user]
    name = Dave Baker
    email = david@fullybaked.co.uk
    trustExitCode = true
[push]
    default = current
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
    meta = blue
    frag = magenta
    old  = red
    new  = green
[color "status"]
    added = yellow
    changed = green
    untracked = blue
