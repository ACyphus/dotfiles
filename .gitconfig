[core]
	quotepath = false
	editor = mvim -vf
    excludesfile = /Users/david/.dotfiles/.globalgitignore
[user]
    name = Dave Baker
    email = david@fullybaked.co.uk
    trustExitCode = true
[push]
    default = current
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
    meta = blue
    frag = magenta
    old  = red
    new  = green
[color "status"]
    added = yellow
    changed = green
    untracked = blue
[alias]
	co = checkout
	ci = commit
[branch]
	autosetuprebase = always
